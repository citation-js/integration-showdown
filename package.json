{
  "name": "citation-js-showdown",
  "version": "1.1.4",
  "description": "Cite references in Showdown",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard \"src/**/*.js\"",
    "test": "node_modules/jasmine-node/bin/jasmine-node test/auto.spec.js",
    "build": "babel src -d lib",
    "bundle": "browserify -e ./lib/index.js -o build/showdown.citation.js",
    "bundle-test": "browserify -t brfs -e ./test/auto.spec.js -o build/test.showdown.citation.js",
    "dev:test": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/larsgw/citation.js-showdown.git"
  },
  "author": "Lars Willighagen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larsgw/citation.js-showdown/issues"
  },
  "homepage": "https://github.com/larsgw/citation.js-showdown#readme",
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-polyfill": "^6.23.0",
    "citation-js": ">=0.3.0-10",
    "showdown": "^1.6.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "brfs": "^1.4.3",
    "browserify": "^14.3.0",
    "jasmine-node": "^1.14.5",
    "standard": "^10.0.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  }
}
